//- Address fields
//- 
//- Accepted arguments:
//- * name (String)
//- * value (Object)

include field

mixin address-field(args)
	.form-control-wrapper: +field({ type: 'text', name: args.name + '.street1', value: args.value ? args.value.street1 : null, placeholder: 'Street 1' })(id=attributes.id ? (attributes.id + '_street1') : null)
	.form-control-wrapper: +field({ type: 'text', name: args.name + '.street2', value: args.value ? args.value.street2 : null, placeholder: 'Street 2' })(id=attributes.id ? (attributes.id + '_street2') : null)
	.form-control-wrapper: +field({ type: 'text', name: args.name + '.suburb', value:  args.value ? args.value.suburb : null, placeholder: 'Suburb' })(id=attributes.id ? (attributes.id + '_suburb') : null)
	.form-control-wrapper.form-control-row
		.col-xs-6: +field({ type: 'text', name: args.name + '.state', value:  args.value ? args.value.state : null, placeholder: 'State' })(id=attributes.id ? (attributes.id + '_state') : null)
		.col-xs-6: +field({ type: 'text', name: args.name + '.postcode', value:  args.value ? args.value.postcode : null, placeholder: 'Postcode' })(id=attributes.id ? (attributes.id + '_postcode') : null)
